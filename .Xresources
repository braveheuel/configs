!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hinstyle:   hintslight

! -- xterm -- !
xterm*faceName: Liberation Mono
xterm*faceSize: 11
! -- xterm*geometry: 120x120 -- !
xterm*eightBitInput: false
xterm*ScrollBar: false
! -- xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48 -- !
! With URLs !
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
xterm*mainMenu*Background: AntiqueWhite
xterm*vtMenu*Background: AntiqueWhite
xterm*fontMenu*Background: AntiqueWhite
xterm*mainMenu*Foreground: black
xterm*fontMenu*Foreground: black
xterm*vtMenu*Foreground: black
xterm*VT100.geometry: 106x69 

! -- Mutt -- !
Mutt*geometry: 120x120
Mutt*iconFile: /usr/share/icons/Mint-X/apps/scalable/evolution.svg
Mutt*faceName: Liberation Mono
Mutt*eightBitInput: false


! -- urxvt -- !
URxvt*font: xft:Liberation Mono:pixelsize=14
URxvt*scrollBar: false
URxvt*termName:	rxvt-256color
!
! Solarized color scheme for the X Window System
!
! http://ethanschoonover.com/solarized


! Common

#define S_yellow        #b58900
#define S_orange        #cb4b16
#define S_red           #dc322f
#define S_magenta       #d33682
#define S_violet        #6c71c4
#define S_blue          #268bd2
#define S_cyan          #2aa198
#define S_green         #859900


! Dark

#define S_base03        #002b36
#define S_base02        #073642
#define S_base01        #586e75
#define S_base00        #657b83
#define S_base0         #839496
#define S_base1         #93a1a1
#define S_base2         #eee8d5
#define S_base3         #fdf6e3


! Light

